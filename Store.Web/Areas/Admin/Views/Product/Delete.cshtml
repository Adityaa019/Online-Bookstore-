@model Product
<div class="card shadow border-0 my-4">
    <div class="card-header bg-dark bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white pt-2">Edit Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-controller="Product" asp-action="Delete" method="post" class="row">
            <div class="border p-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" class="form-control border-0 shadow" disabled />
                    <label asp-for="Title" class="ms-2"></label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" class="form-control border-0 shadow" disabled></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" class="form-control border-0 shadow" disabled />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" class="form-control border-0 shadow" disabled />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-floating py-2 col-6">
                        <input asp-for="Price" class="form-control border-0 shadow" disabled />
                        <label asp-for="Price" class="ms-2"></label>
                    </div>
                    <div class="form-floating py-2 col-6">
                        <input asp-for="ListPrice" class="form-control border-0 shadow" disabled />
                        <label asp-for="ListPrice" class="ms-2"></label>
                        <span asp-validation-for="ListPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="row text-center mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-outline-dark btn-danger text-white shadow-none form-control">Confirm Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark shadow-none form-control">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}